APP_NAME=AI English Mentor API
ENVIRONMENT=development
API_PREFIX=/api/v1
LOG_LEVEL=INFO

DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_english_mentor

JWT_SECRET_KEY=change-me-access
JWT_REFRESH_SECRET_KEY=change-me-refresh
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_ALL_DEV=true

DEFAULT_AI_PROVIDER=gemini
ENABLE_COPILOT=false
# --- Ollama (LLM local, gratuito) ---
# Instale: https://ollama.ai | baixe modelo: ollama pull llama3.2
ENABLE_OLLAMA=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

GEMINI_API_KEY=
GEMINI_MODEL_CORRECTION=gemini-2.0-flash
GEMINI_MODEL_CHAT=gemini-2.0-flash
GEMINI_MODEL_ANALYSIS=gemini-2.0-flash

COPILOT_MODEL_CORRECTION=gpt-4o
COPILOT_MODEL_CHAT=gpt-4o
COPILOT_MODEL_ANALYSIS=gpt-4o
COPILOT_TOKEN_FILE=.github_oauth_token.json
COPILOT_CACHE_FILE=.copilot_token_cache.json

CORRECTION_TIMEOUT_SECONDS=8
CHAT_TIMEOUT_SECONDS=12
ANALYSIS_TIMEOUT_SECONDS=8

RATE_LIMIT_AUTH=12
RATE_LIMIT_CHAT=30
RATE_LIMIT_WINDOW_SECONDS=60
